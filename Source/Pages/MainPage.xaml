<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCs_Project_Master.MainPage"
             Title="SCs Project Master"
             xmlns:vm="clr-namespace:SCs_Project_Master.Source.Models.ViewModels"
             x:DataType="vm:MainPaigeViewModel">

    <TableView Intent="Data">
        <TableRoot>
            <TableSection Title="Projektbasisinformationen">
                <TextCell Text="Name" Detail="{Binding Project.Name}" />
                <TextCell Text="Typ" Detail="{Binding Project.Type}" />
                <TextCell Text="Kategorie" Detail="{Binding Project.Categorie}" />
                <TextCell Text="Startdatum" Detail="{Binding Project.StartDate}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>
