<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SCsProjectMaster.Source.Models.ViewModels"
             xmlns:models="clr-namespace:SCsProjectMaster.Source.Models"
             x:Class="SCsProjectMaster.Source.Views.SettingsView"
             x:DataType="vm:SettingsViewModel"
             Title="Settings">

    <VerticalStackLayout>
        <Label
            Text="{Binding Configuration.ArchivePath}"/>

        <ListView ItemsSource="{Binding Configuration.Types}"/>

        <Button
            Text="Ã„nderungen speicher"
            Command="{Binding SaveChangesCommand}"/>

        <Entry
            Placeholder="Config JSON-String"
            Text="{Binding ConfigurationJson}"/>

        <Button
            Text="Einstellungen laden"
            Command="{Binding LoadConfigurationJsonCommand}"/>
        
        <Button
            Text="Als JSON speichern"
            Clicked="OnSaveAsJsonClicked"/>


    </VerticalStackLayout>
</ContentPage>